{
  "manifest_version": 3,
  "name": "tweeter notes",
  "description": "take notes on mfers",
  "version": "1.0",
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["tweeter-notes.js"],
      "matches": ["https://x.com/*"]
    }
  ],
  "action": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "permissions": ["activeTab", "storage"]
}
